<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labsoftware01.calculadora.MainActivity">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/button11"
        android:layout_below="@+id/numero7"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/numero0"
        android:layout_below="@+id/numero7"
        android:layout_alignParentStart="true"
        android:onClick="btn0" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/numero4"
        android:layout_below="@+id/numero1"
        android:layout_alignParentStart="true"
        android:onClick="btn4" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero5"
        android:layout_alignBaseline="@+id/numero4"
        android:layout_alignBottom="@+id/numero4"
        android:layout_toStartOf="@+id/numero3"
        android:onClick="btn5" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero6"
        android:layout_alignBaseline="@+id/numero5"
        android:layout_alignBottom="@+id/numero5"
        android:layout_alignStart="@+id/numero3"
        android:onClick="btn6" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero8"
        android:layout_alignBaseline="@+id/numero7"
        android:layout_alignBottom="@+id/numero7"
        android:layout_toEndOf="@+id/numero7"
        android:onClick="btn8" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero9"
        android:layout_alignBaseline="@+id/numero8"
        android:layout_alignBottom="@+id/numero8"
        android:layout_alignStart="@+id/numero6"
        android:onClick="btn9" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operadorporcen"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button11"
        android:layout_toStartOf="@+id/operadorporcen"
        android:id="@+id/txtnumero" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero3"
        android:layout_alignBaseline="@+id/numero2"
        android:layout_alignBottom="@+id/numero2"
        android:layout_toEndOf="@+id/numero2"
        android:onClick="btn3" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operadormult"
        android:layout_alignBaseline="@+id/numero6"
        android:layout_alignBottom="@+id/numero6"
        android:layout_alignParentEnd="true"
        android:onClick="multiplicar" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/operadorigual"
        android:layout_alignBottom="@+id/operadorigual"
        android:layout_alignParentEnd="true"
        android:onClick="sumar" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero2"
        android:layout_alignBaseline="@+id/numero1"
        android:layout_alignBottom="@+id/numero1"
        android:layout_toEndOf="@+id/numero1"
        android:onClick="btn2" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operadormenos"
        android:layout_alignBaseline="@+id/numero9"
        android:layout_alignBottom="@+id/numero9"
        android:layout_alignParentEnd="true"
        android:onClick="restar" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operadorigual"
        android:layout_alignBaseline="@+id/operadorporcen"
        android:layout_alignBottom="@+id/operadorporcen"
        android:layout_toEndOf="@+id/operadorporcen"
        android:onClick="igual" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operadordivision"
        android:layout_alignBaseline="@+id/numero3"
        android:layout_alignBottom="@+id/numero3"
        android:layout_alignParentEnd="true"
        android:onClick="dividir" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/numero1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="btn1" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numero7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="btn7" />

    <Button
        android:text="borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="borrar"
        android:layout_alignBottom="@+id/txtnumero"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
